// Exmaple 

(function() {
  var prefix = 'Incident Mass Update';
  var tracker = new ScriptProgressTracker(prefix);

  var gr = new GlideRecord('incident');
  gr.query();
  var total = gr.getRowCount();

  tracker.start(total);

  var processed = 0;
  while (gr.next()) {
    try {
      gr.active = false;
      gr.update();
      processed++;

      if (processed % 50 == 0) {
        tracker.step(50);
      }
    } catch (e) {
      tracker.fail(e.message);
      return;
    }
  }

  tracker.step(processed % 50);
  tracker.finish();
})();
